---
import LinkInline from '../LinkInline.astro'

interface Props {
	name: string
	institution: string
	date: string
	link: string
	credential: string
}

const { name, institution, date, link, credential } = Astro.props
---

<div
	class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-1 md:gap-10 md:space-x-4]"
>
	<div class="relativemd:col-span-2">
		<div class="sticky top-0">
			<span
				class="text-yellow-400 -left-[42px] -top-[10px] absolute rounded-full text-5xl"
				>&bull;</span
			>

			<h3 class="text-xl font-bold text-yellow-400">{name}</h3>
			<h4 class="font-semibold text-xl text-gray-600 dark:text-white">
				{institution}
			</h4>
			<time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80"
				>{date}
			</time>
			{
				credential && (
					<p class="text-sm text-gray-600/80 dark:text-white/80">
						<strong>Credential ID</strong> {credential}
					</p>
				)
			}
			{
				link && (
					<p>
						<LinkInline href={link}>View Credential</LinkInline>
					</p>
				)
			}
		</div>
	</div>
</div>
